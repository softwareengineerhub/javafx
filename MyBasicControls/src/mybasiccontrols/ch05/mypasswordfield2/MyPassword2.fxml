<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.*?>

<GridPane id="GridPane" hgap="15" vgap="15" alignment="CENTER" style="-fx-background-color: palegreen" xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" fx:controller="mybasiccontrols.MyPassword2Controller">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Name" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
            <Font name="Tahoma" size="16" />
        </font>
    </Label>
    <Label text="Password" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <font>
            <Font name="Tahoma" size="16" />
        </font>
    </Label>
    <TextField fx:id="loginField" maxWidth="200"  GridPane.columnIndex="1" GridPane.rowIndex="0" >
        <effect>
            <DropShadow offsetX="4" offsetY="6">
                <color>
                    <Color blue="0.20" green="0.20" red=".60" opacity=".688" />
                </color>
            </DropShadow> 
        </effect>        
    </TextField>
    <PasswordField fx:id="passwordField" maxWidth="200"  GridPane.columnIndex="1" GridPane.rowIndex="1" >
        <effect>
            <DropShadow offsetX="4" offsetY="6">
                <color>
                    <Color blue="0.20" green="0.20" red=".60" opacity=".688" />
                </color>
            </DropShadow> 
        </effect>        
    </PasswordField>    
    <HBox spacing="45" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="1">
        <padding>
            <Insets top="0" right="10" bottom="0" left="0" />
        </padding>
        <effect>
            <DropShadow offsetX="4" offsetY="6">
                <color>
                    <Color blue="0.20" green="0.20" red=".60" opacity=".688" />
                </color>
            </DropShadow> 
        </effect>        
        <Button text="Login" onAction="#loginAction" />
        <Button text="Clear" onAction="#clearAction" />
    </HBox>    
    <Label fx:id="messageLabel" prefWidth="200" style="-fx-font-weight: bold;"  GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.rowSpan="1"  >
        <font>
            <Font name="Tahoma" size="14" />
        </font>
    </Label>
</GridPane>
